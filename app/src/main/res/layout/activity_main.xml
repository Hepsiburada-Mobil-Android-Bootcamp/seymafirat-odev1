<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/position_icon"
        app:layout_constraintBottom_toTopOf="@+id/icon1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_home"
        android:layout_width="55dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Home"
        android:textColor="#18172B"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_location"
        android:layout_width="176dp"
        android:layout_height="20dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/poppins_medium"
        android:text="242 ST Marks Eve, Finland"
        android:textColor="#6E80B0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/icon1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/icons_bg"
        android:backgroundTint="#6D61F2"
        android:src="@drawable/all_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/icon2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/icons_bg"
        android:backgroundTint="#F8F8FA"
        android:src="@drawable/pizza_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/icon3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/icons_bg"
        android:backgroundTint="#F8F8FA"
        android:src="@drawable/beverages_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/icon4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="276dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/icons_bg"
        android:backgroundTint="#F8F8FA"
        android:src="@drawable/asian_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/icon5"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="-31dp"
        android:background="@drawable/icons_bg"
        android:backgroundTint="#F8F8FA"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_all"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/poppins_medium"
        android:text="All"
        android:textColor="#18172B"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_pizza"
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Pizza"
        android:textColor="#6E80B0"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/textView_all"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_beverages"
        android:layout_width="76dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Beverages"
        android:textColor="#6E80B0"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/textView_pizza"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_asian"
        android:layout_width="44dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Asian"
        android:textColor="#6E80B0"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/textView_beverages"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_restaurant"
        android:layout_width="186dp"
        android:layout_height="28dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Popular Restaurents"
        android:textColor="#18172B"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/filter"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="268dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/icon_filter"
        app:layout_constraintStart_toEndOf="@+id/textView_restaurant"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="420dp"
        android:layout_height="420dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="@id/textView_restaurant"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/filter"
            tools:listitem="@layout/item_restaurants" />
    </FrameLayout>

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundback"
        android:elevation="18dp"
        android:padding="8dp"
        app:cnb_menuResource="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cnb_unselectedColor="#6E80B0"
        />




</androidx.constraintlayout.widget.ConstraintLayout>